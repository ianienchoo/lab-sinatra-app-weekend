<h2>Scotches</h2>

<ul class="scotches">

  <% @scotches.each do |scotch| %>
    <li>
      <strong>
        <a href="/scotches/<%= scotch.id %>">
          <%= scotch.to_s %>
        </a>
      </strong>

      <a href="/scotches/<%= scotch.id %>/edit">
        Edit
      </a>

      <form action="/scotches/<%= scotch.id %>/delete" method="post">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>
